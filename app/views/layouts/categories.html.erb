<!DOCTYPE html>
<html>
<head>
  <title>Redbox</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <%= render :partial => 'layouts/shared/navigation' %>
  </header>

  <section>
    <div class='left-nav'>
      <% if content_for? :left_navigation %>
        <%= yield :left_navigation %>
      <% else %>
        <%= render :partial => 'layouts/shared/side_navigation' %>
      <% end %>
    </div>

    <div class='main'>
      <%= yield %>
    </div>
  </section>

</body>
</html>
